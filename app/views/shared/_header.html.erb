<header class="p-3 bg-dark text-white">
  <div class="container-xl">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
        <%= image_tag 'logo.svg', class: 'bi me-2', width: 40, height: 40,
                      alt: "#{t('app_name')} application" %>
      </a>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><a href="/" class="nav-link px-2 text-secondary">Home</a></li>
        <li><a href="https://nimblehq.co" target="_blank" class="nav-link px-2 text-white">Nimble</a></li>
        <li><a href="https://nimblehq.co/compass" target="_blank" class="nav-link px-2 text-white">Our Compass</a></li>
      </ul>

      <% if user_signed_in? %>
        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form>
        <div class="text-end">
          <%= yield :header_nav_bar %>
          <%= link_to t('my_profile'), edit_user_registration_path, method: :get, class: 'btn btn-outline-light' %>
          <%= link_to t('auth.logout'), destroy_user_session_path, method: :delete, class: 'btn btn-warning me-2' %>
        </div>
      <% end %>
    </div>
  </div>
</header>
